{
  "name": "minio-s3-sink",
  "config": {
    "connector.class": "io.confluent.connect.s3.S3SinkConnector",
    "tasks.max": "1",
    "topics": "input-topic",

    "s3.region": "us-east-1",
    "s3.bucket.name": "kafka-data",
    "s3.part.size": "5242880",
    "s3.credentials.provider.class": "com.amazonaws.auth.DefaultAWSCredentialsProviderChain",
    "s3.endpoint": "http://minio:9000",
    "s3.path.style.access": "true",

    "storage.class": "io.confluent.connect.s3.storage.S3Storage",
    "format.class": "io.confluent.connect.s3.format.parquet.ParquetFormat",
    "schema.compatibility": "NONE",

    "key.converter": "org.apache.kafka.connect.storage.StringConverter",
    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "value.converter.schemas.enable": "true",

    "transforms": "injectHeaders",
    "transforms.injectHeaders.type": "io.aiven.kafka.connect.transforms.HeaderToValue",
    "transforms.injectHeaders.header.names": "",
    "transforms.injectHeaders.field.name": "headers",
    "transforms.injectHeaders.flatten": "true"
  }
}
